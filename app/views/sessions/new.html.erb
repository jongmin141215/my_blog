
  <div class="right-box">
    <div class="login-box">
      <% if logged_in? %>
        &nbsp;&nbsp;<%= @current_user.name %>, now you're logged in.<br><br>
        &nbsp;&nbsp;
        <% if @current_user.blog %>
          <%= link_to 'Visit your blog.', blog_articles_path(@blog) %> 
        <% else %>
          <%= link_to 'Create your blog', user_path(@user) %>
        <% end %>
      <% else %>
        <div class="login">
          <%= simple_form_for (:session) do |f| %>
          <%# not sure about (:session) %>
            <%= f.input :email %>
            <%= f.input :password %>
            <%= f.button :submit, 'Log In', class: 'login-button' %> <%=   %> <%= link_to "Sign Up", new_user_path, class: 'signup-link' %>
          <% end %>
        </div>
      <% end %>    
    </div>
  </div>